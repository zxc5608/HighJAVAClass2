<?xml version="1.0" encoding="UTF-8"?>


<!DOCTYPE sqlMap
	PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN"
	"http://ibatis.apache.org/dtd/dtd-map-2.dtd">
<sqlMap namespace="mymember">


<insert id="insertMember" parameterClass="memVo">
insert into mymember (mem_id, mem_name, mem_tel, mem_addr)
	values(#mem_id#,#mem_name#, #mem_tel# , #mem_addr#)
</insert>

<delete id="deleteMember" parameterClass="string">
delete from mymember where mem_id = #mem_id# 
</delete>

<update id ="updateMember" parameterClass="memVo">
update mymember set mem_name = #mem_name# , mem_tel = #mem_tel# ,mem_addr = #mem_addr# where mem_id = #mem_id# 
</update>

<select id ="selectMember" resultClass="memVo">
select * from mymember

</select>

<select id = "getMemberCount" parameterClass="String" resultClass="int" >
	select count(*) cnt from mymember where mem_id =#mem_id#
	
</select>
<select id= "getAllMember" resultClass="memVo" parameterClass="int">
	select * from mymember
</select>
<select id= "getMember" resultClass="memVo" parameterClass="int">
	select *from MYMEMBER where mem_id=#mem_id#
</select>


<!-- Map을 parameterClass로 받아서 처리할때 변수명은 Map의 'key값'으로 지정한다.        키값이와야된다

	파라미터로 가져온 값을 컬럼명등의 자리에서 사용할 경우에는
	달러($) 기호를 사용해서 나타낸다.
	예)$변수명$ 또는 $key값$
									$ 로$ 바꿔준다.   ?에는 키값을 넣어준다
	"update mymember set " + paramMap.get("field") +" = ? where mem_id = ? ";
			
-->
<update id="updateMember2" parameterClass="java.util.Map">
update mymember set
		 $field$ = #data# where mem_id = #memId# 
			
	
</update>
</sqlMap>	